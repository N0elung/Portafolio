---
import { ViewTransitions } from "astro:transitions";
import { t } from "i18next";
import "@fontsource-variable/space-grotesk";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Estudiante de Ingeniería en Software. Trabajando como FrontEnd Developer en Prometheus R&D. Me gusta la programación y los retos difíciles."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="keywords" content="Noel Beltran,Portfolio,Software,FrontEnd" />
    <link rel="canonical" href="/" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Noel Beltran Davalos" />
    <meta name="publisher" content="Noel Beltran Davalos" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="overflow-x-hidden">
    <slot />
  </body>
</html>
<style is:global>
  body {
    font-family: "Space Grotesk Variable", sans-serif;
    background-color: #171b15;
    color: azure;
  }
</style>
